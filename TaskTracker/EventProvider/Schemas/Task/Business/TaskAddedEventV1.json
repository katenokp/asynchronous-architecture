{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "TaskAddedEventV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "EventInfo",
    "Data"
  ],
  "properties": {
    "EventInfo": {
      "$ref": "#/definitions/EventInfo"
    },
    "Data": {
      "$ref": "#/definitions/TaskAddedDataV1"
    }
  },
  "definitions": {
    "EventInfo": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "EventId",
        "Version",
        "Name",
        "Time",
        "Producer"
      ],
      "properties": {
        "EventId": {
          "type": "string",
          "format": "guid",
          "minLength": 1
        },
        "Version": {
          "type": "integer",
          "format": "int32"
        },
        "Name": {
          "type": "string",
          "minLength": 1
        },
        "Time": {
          "type": "string",
          "format": "date-time",
          "minLength": 1
        },
        "Producer": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "TaskAddedDataV1": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "TaskId",
        "AssignedTo",
        "Title",
        "AssignCost",
        "CompleteCost"
      ],
      "properties": {
        "TaskId": {
          "type": "string",
          "format": "guid",
          "minLength": 1
        },
        "AssignedTo": {
          "type": "string",
          "format": "guid",
          "minLength": 1
        },
        "Title": {
          "type": "string",
          "minLength": 1
        },
        "AssignCost": {
          "type": "number",
          "format": "decimal"
        },
        "CompleteCost": {
          "type": "number",
          "format": "decimal"
        }
      }
    }
  }
}